<div class="ui fixed menu">
  <div class="ui container">

    {{#if bookmarks}}
    <div class="ui pointing dropdown link item">
        <span class="text">{{spec.info.title}}</span>
        <i class="dropdown icon"></i>
        <div class="menu">
          <div class="header">Bookmarks</div>
          {{#each bookmarks}}
            <a class="item" href="/pages/openapis.html?spec={{specUrl}}">{{title}}</a>
          {{/each}}
          <div class="header">Other</div>
          <a class="item" href="/pages/openapis.html">Home</a>
        </div>
      </div>
    {{else}}
      <div class="header item">
        {{spec.info.title}}
      </div>
    {{/if}}


    <a class="item" href="#" data-action="bookmark api">
      <div class="floating mini ui green label new"
        data-tooltip="Bookmarks this API spot"
        data-position="bottom center">NEW</div>
      <span>
        <i class="bookmark icon"></i>
      </span>
    </a>


    <a href='#' class="item" data-section="general">
      General
    </a>

    <a href='#' class="item" data-section="definitions">
      Definitions
    </a>

    <a href='#' class="item" data-section="security">
      Security
    </a>

    <a href='#' class="item" data-section="operations">
      Operations
    </a>

    <a href='#' class="item" data-section="stories">
      Data stories
      <div class="floating mini ui green label new"
        data-tooltip="Interact with this API through human friendly data stories"
        data-position="bottom center">NEW</div>
    </a>

  </div>
</div>
