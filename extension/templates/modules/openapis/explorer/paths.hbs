
{{#if paths}}
<div class="ui segments">
  {{#each paths}}
  <div class="ui clearing segment">

    <div class="ui stackable grid">
      <div class="two column row">
        <div class="column">
          <h4>
            <a href='#' data-type="path" data-id="{{path}}">{{path}}</a></h4>
        </div>
        <div class="column">
          {{#each verbs}}
            {{#verb this}}{{/verb}}
          {{/each}}
        </div>
      </div>
    </div>

  </div>
  {{/each}}
</div>
{{else}}
  <img class="ui wireframe image" src="../../../../assets/images/common/paragraph.png">
{{/if}}
