<form class="ui form" data-form="outline">

  <div class="inline field">
    <label>From API</label>
    <span class="ui basic blue label">{{title}}</span>
  </div>

  <div class="field">
    <label>Story title</label>
    <input type="text" name="title" maxlength="80" placeholder="Enter a title for this story">
  </div>
  <div class="field">
    <label>Description</label>
    <textarea rows="2" name="description" maxlength="160" placeholder="Write a short description"></textarea>
  </div>

  <div class="field">
    <label>Based on operation</label>
    <select class="ui search dropdown" name="operation">
      <option value="">Select an operation</option>
      {{#each operations}}
        <option value="{{id}}" title="{{description}}">{{summary}}</option>
      {{/each}}
    </select>
  </div>

</form>
