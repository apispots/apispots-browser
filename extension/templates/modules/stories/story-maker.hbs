<div id="#modal-story-maker" class="ui large modal long scrolling">
  <i class="close icon"></i>
  <div class="header">
    Create a new data story
  </div>
  <div class="content">

    <div class="ui steps">
      <a class="active step" data-step="outline">
        <div class="content">
          <div class="title">Story outline</div>
          <div class="description">Describe your story</div>
        </div>
      </a>
      <a class="step" data-step="input">
        <div class="content">
          <div class="title">Input dataset</div>
          <div class="description">Fill in the input dataset</div>
        </div>
      </a>
      <a class="step" data-step="visualize">
        <div class="content">
          <div class="title">Visualize results</div>
          <div class="description">Select a visualization for your story</div>
        </div>
      </a>
      <a class="step" data-step="play">
        <div class="content">
          <div class="title">Play</div>
          <div class="description">Run and validate the story</div>
        </div>
      </a>
    </div>

    <div id="step-contents">

    </div>

  </div>

  <div class="actions">
    <div class="ui deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button" id="btn-save">
      Save
      <i class="save icon"></i>
    </div>
  </div>

</div>
